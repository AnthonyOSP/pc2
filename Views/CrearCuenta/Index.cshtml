@model pc2.ViewModel.CuentaCBViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
}

<div class="container" style="margin-top:2rem;">
    <h1 class="text-center mb-4">Crea tu cuenta bancaria</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="contactForm" asp-controller="CrearCuenta" asp-action="Crear" method="post">
                <input type="hidden" id="contactId" name="FormCuenta.Id" value="" />
                <div class="form-group mb-3">
                    <label asp-for="FormCuenta!.Nombre" class="control-label">Nombre</label>
                    <input asp-for="FormCuenta!.Nombre" class="form-control" id="FormContacto_Nombre" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormCuenta!.Tipo">Tipo de cuenta</label>
                    <input asp-for="FormCuenta!.Tipo" class="form-control" id="FormContacto_Message" required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormCuenta!.Saldo">Saldo Inicial</label>
                    <input asp-for="FormCuenta!.Saldo" class="form-control" id="FormContacto_Message" required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormCuenta!.Email">Correo Electr√≥nico</label>
                    <input asp-for="FormCuenta!.Email" type="email" class="form-control" id="FormContacto_Email"
                        required />
                </div>

                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-dark">Crear</button>
                </div>
            </form>

            @if (TempData["Message"] != null)
            {
                <div id="successMessage" class="alert alert-success" role="alert">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>
</div>
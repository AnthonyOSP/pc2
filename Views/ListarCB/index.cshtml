@model pc2.ViewModel.CuentaCBViewModel

@{
    ViewData["Title"] = "Contacto";
}

<div class="container" style="margin-top:2rem;">
    <h1 class="text-center mb-4">Lista de Cuentas Bancarias</h1>

    <div class="row justify-content-center">
        <div class="col-sd-6">
            <div class="tabla-responsive">
                <table class="table table-hover caption-top">
                    <caption>Lista de cuentas</caption>
                    <thead class="fw-bold table-dark">
                        <td>ID</td>
                        <td>Nombre</td>
                        <td>Tipo de cuenta</td>
                        <td>Email</td>
                        <td>Saldo</td>
                    </thead>
                    <tbody class="table-group-divider">
                        @if (Model.ListCuenta != null)
                        {
                            foreach (var item in Model.ListCuenta)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>S./ @Html.DisplayFor(modelItem => item.Saldo)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
